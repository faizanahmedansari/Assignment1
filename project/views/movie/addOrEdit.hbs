<h3>{{viewTitle}}</h3>

<form action="/movie" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{movie._id}}">
    <div class="form-group">
        <label>Movie Name</label>
        <input type="text" class="form-control" name="name" placeholder="Movie Name" value="{{movie.name}}">
        <div class="text-danger">
            {{movie.nameError}}</div>
    </div>
    <div class="form-group">
        <label>Image Link</label>
        <input type="text" class="form-control" name="image" placeholder="Image Link" value="{{movie.image}}">
        <div class="text-danger">
            {{movie.imageError}}</div>
    </div>
    <div class="form-row">
            <label>Summary</label>
            <input type="text" class="form-control" name="summary" placeholder="Summary" value="{{movie.summary}}">
             <div class="text-danger">
            {{movie.summaryError}}</div>
    </div>
    <div class="form-group">
        <br>
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/movie/list">View All</a>
    </div>
</form>